{
  "name": "semidown",
  "version": "0.0.3",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && vite build --config vite-site.config.ts",
    "preview": "vite preview"
  },
  "exports": {
