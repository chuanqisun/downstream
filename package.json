  ],
  "main": "./dist/semidown.umd.cjs",
  "module": "./dist/semidown.js",
  "devDependencies": {
    "typescript": "~5.8.3",
    "vite": "^6.3.5"
  },
  "dependencies": {
    "@shikijs/transformers": "^3.6.0",
    "@types/node": "^24.0.0",
    "marked": "^15.0.12",
    "marked-shiki": "^1.2.0",
    "shiki": "^3.6.0"
  }
